{
  "name": "app",
  "version": "1.0.0",
  "main": "bootstrap.ts",
  "author": "Donny Roufs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --no-notify -r tsconfig-paths/register src/bootstrap.ts",
    "test": "jest",
    "build": "tsc",
    "test:watch": "jest --watch --verbose",
    "lint": "eslint . --ext .ts",
    "prepare": "husky install"
  },
  "license": "MIT",
  "dependencies": {
    "jest-mock-extended": "^2.0.7",
    "ts-results": "^3.3.0"
  },
  "devDependencies": {
    "@types/jest": "^28.1.8",
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-cucumber": "^3.0.1",
    "lint-staged": ">=13",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn eslint",
      "yarn prettier --write",
      "yarn test --watchAll=false --findRelatedTests --bail"
    ]
  }
}
